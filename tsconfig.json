{
  "compilerOptions": {
    "target": "ES2024",
    "lib": ["DOM", "DOM.Iterable", "ES2023", "ES2023.Array", "ES2023.Collection", "ES2021.String"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "declaration": true,
    "outDir": "dist",
    "moduleDetection": "force",
    "module": "Preserve",
    "baseUrl": ".",
    "jsx": "react-jsx"

  },
  "include": [
    "src/**/*",
    "shims.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}